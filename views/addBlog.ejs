<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
    <title>Add New Blog</title>
</head>

<body>
  <%- include('./partials/nav') %>
    <div class="container mt-5">
      <form action="/blog/create-new" method="post" enctype="multipart/form-data">
        <div class="mb-3">
          <div class="mb-3">
            <label for="coverImage" class="form-label">Cover Image</label>
            <input class="form-control" type="file" id="coverImage" name="coverImage" />
          </div>
        </div>
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" class="form-control" id="title" name="title" aria-describedby="title" />
        </div>
        <div class="mb-3">
          <label for="body" class="form-label">Body</label>
          <textarea class="form-control" placeholder="Make a Body" id="body" name="body"></textarea>
        </div>
        <div class="mb-3">
          <button type="submit" class="btn " style="background-color: #023047; color: #fefae0;">Submit</button>
        </div>
      </form>
    </div>


    <%- include('./partials/scripts') %>
</body>

</html>